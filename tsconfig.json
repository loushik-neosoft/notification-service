{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ]
    },
    "include": [
        "src/**/*",
        "src/types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ],
    "ts-node": {
        "files": true
    }
}